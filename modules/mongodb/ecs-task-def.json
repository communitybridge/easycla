[
  {
    "essential": true,
    "memory": 512,
    "image": "mongo:3.6",
    "name": "mongodb",
    "command": [
      "mongod",
      "--storageEngine",
      "wiredTiger",
      "--auth"
    ],
    "portMappings": [
      {
        "containerPort": 27017,
        "hostPort": 27017
      }
    ],
    "environment": [
      {
        "name": "MONGO_INITDB_ROOT_USERNAME",
        "value": "lfadmin"
      },
      {
        "name": "MONGO_INITDB_ROOT_PASSWORD",
        "value": "C4a7KxyoX73a"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "mongodb-storage",
        "containerPath": "/data/db"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "infra",
        "awslogs-region": "us-west-2",
        "awslogs-stream-prefix": "mongodb"
      }
    },
    "dockerLabels": {
      "app_name": "mongodb",
      "app_env": "production",
      "app_region": "${AWS_REGION}"
    }
  }
]